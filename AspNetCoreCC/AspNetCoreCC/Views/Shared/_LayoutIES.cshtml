        <div class="container-fluid">
            <div class="row">
                <div class="col-12">&nbsp;</div>
                <div class="col-12">&nbsp;</div>
                <div class="col-12">&nbsp;</div>
                <div class="col-12">&nbsp;</div>
            </div>
            <div class="row">
                <div class="col-2">
                    <nav class="nav flex-column bg-transparent">
                        <a class="nav-link active" href="#">
                            <img src="~/images/university.png" width="30" height="30" alt="">
                        <a class="nav-link" href="#">
                                <img src="~/images/department.png" width="30" height="30" alt=""> Departamentos
                            </a>
                    </nav>
</body>
</head>
